<div class="container mt-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title text-success mb-4"><%= @article.new_record? ? 'New Article' : 'Edit Article' %></h2>

          <% if @article.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h4><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h4>
              <ul>
                <% @article.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_for @article do |f| %>
            <div class="mb-3">
              <%= f.label :title, class: "form-label" %>
              <%= f.text_field :title, class: "form-control", placeholder: "Enter article title" %>
            </div>

            <div class="mb-3">
              <%= f.label :text, class: "form-label" %>
              <%= f.text_area :text, class: "form-control", rows: 5, placeholder: "Write your article content here..." %>
            </div>

            <div class="d-flex justify-content-end">
              <%= f.submit class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
