<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <!-- Title Section -->
          <h1 class="card-title text-success mb-4 text-center"><%= @article.title %></h1>
          <p class="card-text text-justify"><%= @article.text %></p>

          <!-- Action Buttons -->
          <div class="d-flex justify-content-end">
            <div class="btn-group">
              <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-warning' %>
              <%= link_to 'Back', articles_path, class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      </div>

      <!-- Comments Section -->
      <div class="card shadow-sm border-0 mt-5">
        <div class="card-body">
          <h2 class="card-title text-primary mb-4">Comments</h2>
          <div class="list-group list-group-flush">
            <%= render @article.comments %>
          </div>
        </div>
      </div>

      <!-- Add Comment Section -->
      <div class="card shadow-sm border-0 mt-4">
        <div class="card-body">
          <h2 class="card-title text-primary mb-4">Add a comment:</h2>
          <%= render 'comments/form' %>
        </div>
      </div>
    </div>
  </div>
</div>
