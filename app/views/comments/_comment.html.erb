<div class="card mb-4">
  <div class="card-header bg-light">
    <strong>Commenter:</strong> <%= comment.commenter %>
  </div>
  <div class="card-body">
    <p class="card-text">
      <strong>Comment:</strong> <%= comment.body %>
    </p>
    <div class="d-flex justify-content-between">
      <%= link_to 'Destroy Comment', [comment.article, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
    </div>
  </div>
</div>
